@using Railwind.Common.Enums
@using Railwind.Enums
@using Railwind.Features.Themes
@inherits LayoutComponentBase
<div class="page">
    <div class="sidebar">
        <NavMenu/>
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <MyThemeProvider PrimaryColor="Colors.TurkishRose"
                             SecondaryColor="Colors.TurkishRose"
                             BackgroundColor="Colors.Woodsmoke"
                             AccentColor="Colors.Emerald"
                             ShapeVariant="ShapeVariant.Rounded"
                             Rounded="Rounded.Md"
            >
                @Body
            </MyThemeProvider>
        </article>
    </main>
</div>