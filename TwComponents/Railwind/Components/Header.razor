@using System.Reflection.Metadata
@using Railwind.Common.Enums.Tailwind
@using Railwind.Common.Extensions
@using Railwind.Enums
@inherits Railwind.Common.RailwindBaseComponent

<h1 class="@TitleClassName">@Title</h1>
<h6 class="@DescriptionClassName">@Subtitle</h6>

@code {

    [Parameter, EditorRequired] public string Title { get; set; } = string.Empty;
    [Parameter, EditorRequired] public string Subtitle { get; set; } = string.Empty;
    [Parameter, EditorRequired] public FontWeight Weight { get; set; } = FontWeight.SemiBold;
    [Parameter] public Sizing TitleFontSize { get; set; } = Sizing.ThreeXl;
    [Parameter] public bool HasBottomBorder { get; set; } = false;

    private string TitleClassName => ClassName(css =>
    {
        css.Add("text-gray-900 dark:text-white ");
        css.Add(Weight.ToCss());
        css.Add(TitleFontSize.ToFontSize());
    });
    
    private string DescriptionClassName => ClassName(css =>
    {
        css.Add("text-gray-400 dark:text-gray-400 text-xs");
        css.Add("border-b dark:border-b-stone-900" ,HasBottomBorder);
    });

}