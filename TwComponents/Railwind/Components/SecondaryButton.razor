<button type="button"
        @onclick="OnClicked"
        class="rounded bg-white dark:bg-neutral-900/20 ring-1 dark:ring-neutral-800 ring-gray-300 hover:bg-gray-50 px-2 py-1.5 text-sm font-semibold text-gray-900  dark:text-white shadow-xs dark:hover:bg-neutral-800">
    @Text
    @if (ChildContent is not null)
    {
        @ChildContent
    }
</button>

@code {

    [Parameter, EditorRequired] public EventCallback OnClicked { get; set; }
    [Parameter] public string Text { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; } = null;
}
